{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "title": "Earthquakes of Magnitude >4 (Oct 4-10, 2022)",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KorianderK/FIT3179/main/Vega-Lite/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KorianderK/FIT3179/main/Vega-Lite/data/earthquake_data.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "mag",
            "type": "quantitative",
            "title": "Richter scale",
            "scale": {"domain": [4, 8]}
          },
          "color": {
            "field": "depth",
            "type": "quantitative",
            "title": "Depth in km",
            "scale": {"scheme": "reds"}
          }
        }
      }
    ]
  }
