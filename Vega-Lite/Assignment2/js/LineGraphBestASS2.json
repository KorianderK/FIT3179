{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 750,
    "height": 400,
    "padding": 10,
    "title": "Daily AQI Values for Top 10 best Countries -August 2022",
    "data": {"url": "https://raw.githubusercontent.com/KorianderK/FIT3179/main/Vega-Lite/Assignment2/data/AQITop10Best.csv"},
    "params": [
      {
        "name": "country_select",
        "bind": {
          "input": "select",
          "options": [
            null,
            "French Guiana",
            "Honduras",
            "Cambodia",
            "Grenada",
            "Brunei",
            "Venezuela",
            "Bermuda",
            "Puerto Rico",
            "Cayman Islands",
            "Guam"
          ],
          "labels": [
            "Show All",
            "French Guiana",
            "Honduras",
            "Cambodia",
            "Grenada",
            "Brunei",
            "Venezuela",
            "Bermuda",
            "Puerto Rico",
            "Cayman Islands",
            "Guam"
            ],
            "name": "Country Select: "
        }
      }
  
    ],
    "transform": [
      {"filter": "country_select == null || datum.Country == country_select"}
    ],
    "encoding": {
      "x": {
        "field": "Date", 
        "type": "temporal"},
  
      "y": {
        "field": "AQI_Value",
        "type": "quantitative",
        "axis": {"domain": false, "grid": false, "ticks": false, "title": "AQI Value"},
        "scale": {"domain": [0, 100]}
      },
  
      "color": {
        "field": "Country",
        "type": "nominal",
        "scale": {
          "domain": [
            "French Guiana",
            "Honduras",
            "Cambodia",
            "Grenada",
            "Brunei",
            "Venezuela",
            "Bermuda",
            "Puerto Rico",
            "Cayman Islands",
            "Guam"
          ]
        }
      },
      
  
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Date", "type": "temporal", "title": "Date"},
        {"field": "AQI_Value", "type": "quantitative", "title": "AQI Value"}
      ]
    },
    "layer": [
      {"mark": {"type": "line", "size": 2, "opacity": 0.6, "point": true}}
    ]
  }
